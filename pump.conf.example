[server]
# Host address to bind the server to. Use 0.0.0.0 to listen on all interfaces.
host = 0.0.0.0
# Port number for the web interface
port = 8080
# Enable debug mode for development
debug = true

[database]
# Path to the SQLite database file
path = pump.db

[DATABASE]
# PostgreSQL database configuration
host = localhost
port = 5432
user = pump
password = Ge3hgU07bXlBigvTbRSX
dbname = pump
min_connections = 1
max_connections = 10

[MUSIC]
# Music library paths (comma-separated list)
library_paths = /path/to/your/music

[LASTFM]
# Last.fm API configuration (optional)
api_key = your_api_key
api_secret = your_api_secret
username = your_username
password = your_password

[SPOTIFY]
# Spotify API configuration (optional)
client_id = your_client_id
client_secret = your_client_secret
redirect_uri = http://localhost:5000/callback

[DISCOGS]
# Discogs API configuration (optional)
consumer_key = your_consumer_key
consumer_secret = your_consumer_secret
user_agent = PUMP/1.0 +http://github.com/yourname/pump

[app]
# Default number of songs in generated playlists
default_playlist_size = 10
# Maximum number of results to return in searches
max_search_results = 50

[api_keys]
# Last.fm API credentials - get yours from https://www.last.fm/api/account/create
lastfm_api_key = YOUR_LASTFM_API_KEY
lastfm_api_secret = YOUR_LASTFM_API_SECRET