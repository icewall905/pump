[server]
# Host address to bind the server to. Use 0.0.0.0 to listen on all interfaces.
host = 0.0.0.0
# Port number for the web interface
port = 8080
# Enable debug mode for development
debug = true

[database]
# Path to the SQLite database file
path = pump.db

[app]
# Default number of songs in generated playlists
default_playlist_size = 10
# Maximum number of results to return in searches
max_search_results = 50

[api_keys]
# Last.fm API credentials - get yours from https://www.last.fm/api/account/create
lastfm_api_key = YOUR_LASTFM_API_KEY
lastfm_api_secret = YOUR_LASTFM_API_SECRET